<html>
<head>
<style>
table, th, td, tr {
    border: 1px solid black;
}
</style>
</head>


<table class="grid" cellpadding="10" cellspacing="0">
		<thead>
			<tr>
				<th>Project Name</th>
				<th>Developers</th>
 				<th>Action</th>		
			</tr>
        </thead>
<tbody>

	<% @projects.each do |project| %>
		<tr>
			<td>
				<%= project.name %>	
			</td>
			<td> 
				<% project.users.each do |developer| %>
					<%= developer.name %>
				<% end %>	
			</td>	
			<td>
				<%= link_to 'Edit Project', edit_project_path(project) %>&nbsp;&nbsp;<%= link_to 'Show', project_path(project)%>		
			</td>
		</tr>
	<% end %>
</tbody>
</table>

</html>

<%= link_to 'New Project', action: 'new' %>